    # check python file for class definition.
    #size_hint: 1, 1
    MDBottomNavigation:
        #panel_color: color3
        MDBottomNavigationItem:
            name: "recent_screen"
            text: "Recent"
            icon: "timelapse"
            MDBoxLayout:
                canvas.before:
                    Color:
                        rgba: color3
                    Rectangle:
                        size: self.size
                        pos: self.pos
                size_hint_x: .96
                pos_hint: {"center_x": 0.5}
                padding: dp(0), dp(scroll_padding), dp(0), dp(0)
