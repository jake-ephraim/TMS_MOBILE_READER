
<SignupWindow>:
    name: 'signup'
    canvas.before:
        Color:
            rgba: color3
        Rectangle:
            size: self.size
    BoxLayout:
        orientation:'vertical'
        BigTitle:
        BoxLayout:
            orientation:'vertical'
            padding: ('0dp', '80dp', '0dp', '0dp')
            BoxLayout:
                orientation:'vertical'
                spacing: '10dp'
                TextBox:
                    id: "signup_email"
                    pos_hint: {"center_x": .5}
                    size_hint: None,None
                    width: min(dp(295), root.width*0.69)   
                    focus: True   
                TextBox:
                    id: "signup_password"
                    hint_text: 'Password'
                    pos_hint: {"center_x": .5}
                    size_hint: None,None
                    password: True
                    width: min(dp(295), root.width*0.69)
                TextBox:
                    id: "signup_confirm_password"
                    hint_text: 'confirm Password'
                    pos_hint: {"center_x": .5}
                    size_hint: None,None
                    password: True
                    width: min(dp(295), root.width*0.69)
            BoxLayout:
                orientation:'vertical'
                AnchorLayout:                   
                    Image:
                        source: img_dir + "Divider.png"
                        allow_stretch: True  
                        size_hint: None, None
                        size: (dp(24), dp(4))   
            BoxLayout:
                orientation:'vertical'
                BoxLayout:
                    orientation:'vertical'
                    size_hint: None, None
                    width: min(dp(348), root.width*0.82)
                    pos_hint: {"center_x": .5}
                    spacing: dp(10)
                    padding: ('0dp', '0dp', '0dp', '40dp')
                    FlatButton:
                        text: "SIGN UP"
                        size_hint: 1, None
                        on_press:
                            root.manager.current = 'recent'
                    RectangleButton: 
                        size_hint: 1, None
                        text: 'LOG IN'
                        on_press:
                            root.manager.current = 'login'
                        on_release:
                            app.root.focus_login()
                    

        
