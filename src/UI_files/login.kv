
<LoginWindow>:
    name: 'login'
    canvas.before:
        Color:
            rgba: color3
        Rectangle:
            size: self.size
    BoxLayout:
        orientation:'vertical'

        BigTitle:

        BoxLayout:
            orientation:'vertical'
            BoxLayout:
                orientation:'vertical'
                spacing: '10dp'
                TextBox:
                    id: "login_email"
                    pos_hint: {"center_x": .5}
                    size_hint: None,None
                    width: min(dp(295), root.width*0.69)   
                    focus: True   
                TextBox:
                    id: "login_password"
                    hint_text: 'Password'
                    pos_hint: {"center_x": .5}
                    size_hint: None,None
                    password: True
                    width: min(dp(295), root.width*0.69)
            BoxLayout:
                orientation:'vertical'
                AnchorLayout:                   
                    Image:
                        source: img_dir + "Divider.png"
                        allow_stretch: True  
                        size_hint: None, None
                        size: (dp(24), dp(4))
                    
            BoxLayout:
                orientation:'vertical'
                BoxLayout:
                    orientation:'vertical'
                    size_hint: None, None
                    width: min(dp(348), root.width*0.82)
                    pos_hint: {"center_x": .5}
                    spacing: dp(10)
                    padding: ('0dp', '0dp', '0dp', '40dp')
                    FlatButton:
                        text: "LOG IN"
                        size_hint: 1, None
                        on_press:
                            root.manager.current = 'tabs'
                    RectangleButton: 
                        size_hint: 1, None
                        on_press:
                            root.manager.current = 'signup'
                        on_release:
                            app.root.focus_signup()

        
